<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/topPanel">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Здесь будут настройки ">
    </TextView>
    <Button
        android:id="@+id/createPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new"></Button>
</LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_above="@id/bottomPanel"
        android:layout_below="@+id/topPanel"></androidx.viewpager.widget.ViewPager>
    <!--<com.tmall.ultraviewpager.UltraViewPager
        android:id="@+id/ultra_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_above="@id/bottomPanel"
        android:layout_below="@+id/topPanel"
        android:background="@android:color/darker_gray" />-->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="2dp"
        android:background="@drawable/bottom_panel"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playButton"
            android:layout_weight="1"
            android:text="Play"
            android:textAllCaps="false"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopButton"
            android:layout_weight="1"
            android:text="Stop"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"></Button>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Название композиции"
            android:textAllCaps="false"
            android:textSize="15dp"></TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pianoRollButton"
            android:layout_weight="1"
            android:text="PRoll"
            android:textAllCaps="false"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mixer"
            android:text="Mixer"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:layout_weight="1"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sequencer"
            android:text="Sequencer"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:layout_weight="1"></Button>


    </LinearLayout>


</RelativeLayout>